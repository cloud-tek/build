{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "All",
        "BetaCheck",
        "BuildDependencyTree",
        "Clean",
        "CommitCheck",
        "Compile",
        "DotnetOutdatedInstall",
        "Format",
        "FormatAnalyzersCheck",
        "FormatCheck",
        "HuskyInstall",
        "InitializeCoverageCollector",
        "IntegrationTests",
        "OutdatedCheck",
        "Pack",
        "Publish",
        "PublishTests",
        "Restore",
        "RunChecks",
        "Test",
        "UnitTests",
        "UpdateOutdated",
        "VulnerabilityCheck"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "AppInsightsConnectionString": {
          "type": "string",
          "description": "Application insights connection string"
        },
        "BuildNumber": {
          "type": "string",
          "description": "A buildNumber for beta suffix calculation. Default is empty"
        },
        "CollectCoverage": {
          "type": "boolean",
          "description": "Enabling code coverage collection. Default is false"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration for dotnet commands. Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "PackagesFilter": {
          "type": "string",
          "description": "Space separated strings for outdated and beta checks to narrow search. Filter works as contains function. If any string match - package is included in results. Default is 'CloudTek Core'"
        },
        "PublishAsZip": {
          "type": "boolean",
          "description": "Publish artifact(s) as .zip file(s)"
        },
        "PublishInParallel": {
          "type": "boolean",
          "description": "Publish artifacts in parallel"
        },
        "ReadyToRun": {
          "type": "boolean",
          "description": "Ready to Run for dotnet commands. Default is false"
        },
        "Runtime": {
          "type": "string",
          "description": "Runtime for dotnet commands. Defaults to an empty string (ignored during dotnet publish)"
        },
        "TestFilter": {
          "type": "string",
          "description": "Test filter. Default is 'Flaky!=true'"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
